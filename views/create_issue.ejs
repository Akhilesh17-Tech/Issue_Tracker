<link rel="stylesheet" href="/css/create.css">
<%- include('_header'); %>
<div class="main-container">
    <div class="project-box">
        <h2 class="project-title">Create Issue</h2>
        <form action="/issue_tracker/project_issue" method="POST" class="login-form">
            <div class="input-container">
                <i class="fas fa-project-diagram icon"></i>
                <input class="input-field" type="text" name="title" placeholder="Project title" required>
            </div>
            <div class="input-container">
                <i class='fas fa-info icon'></i>
                <input class="input-field" type="text" name="description" placeholder="Project description" required>
            </div>
            <div class="input-container">
                <i class="fas fa-tags icon"></i>
                <input class="input-field" type="text" name="lables" placeholder="Project lables" required>
            </div>
            <div class="input-container">
                <i class="fas fa-user icon"></i>
                <input class="input-field" type="text" name="author" placeholder="Project author" required>
            </div>
            <input type="hidden" name="project" value="<%= project._id %>">
            <button class="submit-btn" type="submit">Create issue</button>
        </form>
    </div>
</div>